<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="14dp"
        android:layout_marginTop="42dp"
        android:layout_toLeftOf="@+id/TbxDecimale"
        android:text="Decimale" />

    <EditText
        android:id="@+id/TbxDecimale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:inputType="number" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TbxEsadecimale"
        android:layout_alignBottom="@+id/TbxEsadecimale"
        android:layout_alignRight="@+id/textView3"
        android:text="Esad." />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TbxBinario"
        android:layout_alignBottom="@+id/TbxBinario"
        android:layout_alignLeft="@+id/textView1"
        android:text="Binario" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TbxOttale"
        android:layout_alignBottom="@+id/TbxOttale"
        android:layout_alignLeft="@+id/textView2"
        android:text="Ottale" />

    <EditText
        android:id="@+id/TbxEsadecimale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TbxOttale"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="46dp"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/TbxBinario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TbxOttale"
        android:layout_marginBottom="39dp"
        android:layout_toRightOf="@+id/textView1"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/TbxOttale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TbxEsadecimale"
        android:layout_marginBottom="46dp"
        android:layout_toRightOf="@+id/textView1"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/BtnConvert"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TbxDecimale"
        android:layout_below="@+id/TbxDecimale"
        android:layout_marginLeft="49dp"
        android:layout_marginTop="17dp"
        android:text="Convert!" />

    <TextView
        android:id="@+id/txtOrario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/BtnConvert"
        android:layout_alignBottom="@+id/BtnConvert"
        android:layout_alignLeft="@+id/textView1"
        android:text="TextView" />

</RelativeLayout>