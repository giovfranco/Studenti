<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/Btn_Conversione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="98dp"
        android:text="Converti" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Txv_Binario"
        android:layout_alignBottom="@+id/Txv_Binario"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="22dp"
        android:text="Binario:" />

    <TextView
        android:id="@+id/Txv_Ottale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Txv_Binario"
        android:layout_below="@+id/Txv_Binario"
        android:layout_marginTop="49dp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Txv_Ottale"
        android:layout_alignBottom="@+id/Txv_Ottale"
        android:layout_alignLeft="@+id/textView4"
        android:text="Ottale:" />

    <TextView
        android:id="@+id/Txv_Esadecimale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Txv_Ottale"
        android:layout_below="@+id/Txv_Ottale"
        android:layout_marginTop="60dp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/Txv_Binario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Btn_Conversione"
        android:layout_below="@+id/Btn_Conversione"
        android:layout_marginTop="24dp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Txv_Esadecimale"
        android:layout_alignBottom="@+id/Txv_Esadecimale"
        android:layout_marginRight="14dp"
        android:layout_toLeftOf="@+id/Txv_Esadecimale"
        android:text="Esadecimale:" />

    <EditText
        android:id="@+id/EditText_Decimale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Btn_Conversione"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:ems="10"
        android:inputType="number" >

        <requestFocus />
    </EditText>

</RelativeLayout>